
@model miniprojet.ViewModels.RegisterViewModel

<div class="full-screen-bg">
    <!-- Background Icons -->
    <i class="fas fa-building bg-icon"></i>
    <i class="fas fa-money-bill-wave bg-icon"></i>
    <i class="fas fa-hand-holding-usd bg-icon"></i>
    <i class="fas fa-home bg-icon"></i>
    <i class="fas fa-key bg-icon"></i>
    <i class="fas fa-door-open bg-icon"></i>
    <i class="fas fa-couch bg-icon"></i>
    <i class="fas fa-user-plus bg-icon"></i>
</div>

<div class="content-wrapper" style="padding-top: 80px;">
    <div class="container-fluid">
        <div class="row row-centered">
            <!-- Left Column: Image -->
            <div class="col-md-6 image-column">
                <img src="~/images/image.png" alt="3D Avatar" class="img-fluid"
                     style="max-height: 50vh; animation: float 3s ease-in-out infinite;" />
            </div>

            <!-- Right Column: Form -->
            <div class="col-md-6 form-column">
                <div class="card shadow-lg border-0" style="max-width: 400px; margin-top: 20px;">
                    <div class="card-header bg-gradient-primary text-white text-center py-3">
                        <h2 class="mb-0" style="color: black; font-size: 1.5rem;">Join Us!</h2>
                        <p class="mb-0" style="color: black; font-size: 0.9rem;">Register to find your dream apartment</p>
                    </div>
                    <div class="card-body p-3">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                        }

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger" role="alert">
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <form asp-action="Register" method="post">
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label" style="font-size: 0.9rem;">Username</label>
                                <input asp-for="Username" class="form-control form-control-sm"
                                       placeholder="Enter your username" required />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label" style="font-size: 0.9rem;">Email</label>
                                <input asp-for="Email" type="email" class="form-control form-control-sm"
                                       placeholder="Enter your email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label" style="font-size: 0.9rem;">Password</label>
                                <input asp-for="Password" type="password" class="form-control form-control-sm"
                                       placeholder="Enter your password" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label" style="font-size: 0.9rem;">Retype Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-sm"
                                       placeholder="Retype your password" required />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm w-100 mb-3" style="font-size: 0.9rem;">Register</button>
                            <div class="text-center">
                                <a href="/Account/Login" class="btn btn-link text-decoration-none" style="font-size: 0.9rem;">
                                    Already have an account? Login
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
