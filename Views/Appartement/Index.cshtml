
@model IEnumerable<miniprojet.Models.Appartement>

<div class="content-wrapper" style="padding-top: 80px;">
    <div class="container">
        <h1 class="my-4">Available Apartments</h1>
        @if (ViewBag.WelcomeMessage != null)
        {
            <div class="alert alert-info">@ViewBag.WelcomeMessage</div>
        }
        <form asp-action="Index" method="get" class="mb-4">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" name="searchLocalite" class="form-control" placeholder="Search by location" value="@Context.Request.Query["searchLocalite"]" />
                </div>
                <div class="col-md-4">
                    <input type="number" name="minValeur" class="form-control" placeholder="Min value" step="0.01" value="@Context.Request.Query["minValeur"]" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Number</th>
                    <th>Location</th>
                    <th>Value</th>
                    <th>Proprietor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NumApp</td>
                        <td>@item.Localite</td>
                        <td>@item.Valeur</td>
                        <td>@(item.Propriétaire != null ? $"{item.Propriétaire.Nom} {item.Propriétaire.Prénom}" : "N/A")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
