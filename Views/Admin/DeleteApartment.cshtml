
@model miniprojet.Models.Appartement

<div class="content-wrapper" style="padding-top: 80px;">
    <div class="container">
        <h1 class="my-4">Delete Apartment</h1>
        <div class="card shadow-lg border-0" style="max-width: 500px; margin: 0 auto;">
            <div class="card-body p-4">
                <h3>Are you sure you want to delete this apartment?</h3>
                <dl class="row">
                    <dt class="col-sm-4">Apartment Number</dt>
                    <dd class="col-sm-8">@Model.NumApp</dd>
                    <dt class="col-sm-4">Location</dt>
                    <dd class="col-sm-8">@Model.Localite</dd>
                    <dt class="col-sm-4">Value</dt>
                    <dd class="col-sm-8">@Model.Valeur</dd>
                    <dt class="col-sm-4">Proprietor</dt>
                    <dd class="col-sm-8">@(Model.Propriétaire?.Nom ?? "N/A")</dd>
                </dl>
                <form asp-action="DeleteApartment" method="post">
                    <input type="hidden" asp-for="NumApp" />
                    <button type="submit" class="btn btn-danger w-100">Delete</button>
                    <div class="text-center mt-3">
                        <a asp-action="ManageApartments" class="btn btn-link">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
